@* @model IEnumerable<ProyectoFinalApp.Models.Categoria> *@
@model ProyectoFinalApp.ViewModel.CategoriaVM

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-info btn-sm"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.categorias[0].descripcion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.categorias) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.descripcion)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                    <i class="bi bi-pencil-square"></i>
                </a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">
                    <i class="bi bi-card-text"></i>
                </a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i>
                </a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="_Paginador" for="@Model.paginador" />

<style>
    .bi-plus-circle {
        font-size: 1.5rem;
        padding-bottom: 5px;
    }

    .btn {
        font-weight: bold;
    }

    .btn-info {
        height: 55px;
    }
</style>