@model List<ProyectoFinalApp.Models.Producto>
@{
    ViewData["Title"] = "Pagina Principal";
}

<div class="text-center">
    <h1>Bienvenido a la Pagina Principal</h1>
    <h2>Productos Disponibles</h2>
    <div class="container">
        <div class="row">
            @foreach (var producto in Model)
            {
                <div class="col-md-4">
                    <div class="card mb-4 shadow-sm">
                        <img src="~/fotos/@producto.imagen" class="img-fluid mx-auto d-block mt-2" style="max-width:200px" />
                        <div class="card-body">
                            <h5 class="card-title">@producto.nombre</h5>
                            <p class="card-text">@producto.descripcion</p>
                            <p class="card-text">Stock: @producto.stocks.Count()</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
